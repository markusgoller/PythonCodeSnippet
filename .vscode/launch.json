  "version": "0.2.0",
  "configurations": [
    {
      "name": "py: hello Rudi",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "cwd": "${workspaceFolder}/",
      "args": [
        "--name",
        "Rudi",
        "--settings",
        "en"
      ]
    },
    {
      "name": "py: help",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/PythonCodeSnippet/main.py",
      "cwd": "${workspaceFolder}/PythonCodeSnippet/",
      "args": [
        "-h"
      ]
    }
  ]
}